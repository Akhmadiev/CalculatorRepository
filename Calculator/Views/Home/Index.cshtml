@using Calculator.Models
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="row">
                <div class="form-group">
                    <input type="text" name="firstNumber" value="@ViewBag.firstNumber" placeholder="first number" />
                </div>
                <div class="form-group">
                    <input type="text" name="expression" value="@ViewBag.expression" placeholder="expression" />
                </div>
                <div class="form-group">
                    <input type="text" name="secondNumber" value="@ViewBag.secondNumber" placeholder="second number" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Enter" />
                </div>
            </div>

            <div class="row">
                Result: <span>@ViewBag.Result</span>
            </div>
        </form>
    </div>
</div>